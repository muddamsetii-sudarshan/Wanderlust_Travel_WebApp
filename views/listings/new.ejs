<%- layout('/layouts/boilerplate') %>
<body>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <h2>Create new listing</h2>
    <form class="needs-validation" method="post" action="/listings" novalidate enctype="multipart/form-data">
        <div class="mb-2">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="write a catchy title" type="text" class="form-control" required/>
            <div class="valid-feedback">Title looks good!</div>
        </div>
        <div class="mb-2">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]"  type="text"  class="form-control" required ></textarea>
            <div class="invalid-feedback">please enter short description</div>
        </div>
        <div class="mb-2">
            <label for="image" class="form-label">Upload your image</label>
            <input name="listing[image]" placeholder="url(link)" type="file" class="form-control" required/>
        </div>
        <div class="row">
        <div class="mb-2 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="1200" type="number" class="form-control" required min="1" step="1"/>
            <div class="invalid-feedback">Enter positive number</div>
        </div>
        <div class="mb-2 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="india" type="text" class="form-control" required/>
            <div class="invalid-feedback">country name should be valid</div>
        </div>
    </div>
    <div class="row">
        <div class="mb-2 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Anantapur,A.P" type="text" class="form-control" required/>
            <div class="invalid-feedback">Location should be valid</div>
        </div>
        <div class="mb-2 col-md-4">
            <label for="Category" class="form-label">Category</label>
            <select class="form-select" id="Category" required name="listing[category]">
                <option selected disabled value>Select</option>
                <option value="Rooms">Rooms</option>
                <option value="Mountains">Mountains</option>
                <option value="Pools">Pools</option>
              </select>
              <div class="invalid-feedback">
                select valid Category
              </div>
        </div>

    </div>
        
        <button class="btn btn-dark addbutton mt-3" >add</button>
    </form>
</div> 
</div>
</body>
